---
import InvitationSection from '../InvitationSection.astro';
---

<InvitationSection id="section-final-message">
  <div class="relative z-10 space-y-12 text-center">
    
    <!-- Final message -->
    <section class="space-y-8 max-w-2xl mx-auto">
      
      <!-- Special message -->
      <div class="space-y-6">
        <p class="font-hero text-lg md:text-2xl text-secondary-light font-light leading-relaxed">
          ¡Este día es muy especial y que vayas lo hace aún más!
        </p>
      </div>

      <!-- Signature -->
      <div class="flex items-center justify-center">
        <div class="space-y-2">
          <p class="font-angella text-2xl md:text-3xl text-secondary-light font-light">
            Con amor,
          </p>
          <p class="font-angella text-5xl md:text-6xl text-secondary-light font-light">
            Julietta
          </p>
        </div>
        <img
          src="/images/corazones.png"
          alt="Corazones"
          class="w-20 md:w-24 h-auto select-none"
          aria-hidden="true"
        />
      </div>

    </section>

  </div>
</InvitationSection> 