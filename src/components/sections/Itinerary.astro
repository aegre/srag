---
import InvitationSection from '../InvitationSection.astro';
import ItineraryIcon from '../ItineraryIcon.astro';
import ItineraryFlower from '../ItineraryFlower.astro';
---

<InvitationSection id="section-itinerary">
  <div class="relative z-10 space-y-12 text-center">
    
    <!-- Header -->
    <header class="m-1 mb-8">
      <h2 class="font-hero text-3xl md:text-4xl tracking-[0.2em] text-secondary-light font-light">
        Itinerario
      </h2>
    </header>

    <!-- Timeline -->
    <section class="relative max-w-lg mx-auto">
      <!-- Vertical timeline line -->
      <div class="absolute left-1/2 transform -translate-x-1/2 w-px h-full bg-gradient-to-b from-transparent via-secondary-light/30 to-transparent"></div>
      
      <div class="space-y-4">
                 <!-- Recepción -->
         <div class="relative flex items-center">
           <!-- Left side - text -->
           <div class="w-1/2 pr-8 text-right">
             <h3 class="font-hero text-lg md:text-xl text-secondary-light font-light">Recepción</h3>
             <p class="font-hero text-base md:text-lg text-secondary-light/80 font-light">5:30 pm</p>
           </div>
           
           <!-- Center - flower icon -->
           <div class="absolute left-1/2 transform -translate-x-1/2 w-8 h-8 flex items-center justify-center">
             <ItineraryFlower />
           </div>
           
           <!-- Right side - icon -->
           <div class="w-1/2 pl-8 flex justify-start">
             <ItineraryIcon icon="list" alt="Reception list" />
           </div>
         </div>

                 <!-- Cena -->
         <div class="relative flex items-center">
           <!-- Left side - icon -->
           <div class="w-1/2 pr-8 flex justify-end">
             <ItineraryIcon icon="food" alt="Dinner" />
           </div>
           
           <!-- Center - flower icon -->
           <div class="absolute left-1/2 transform -translate-x-1/2 w-8 h-8 flex items-center justify-center">
             <ItineraryFlower />
           </div>
           
           <!-- Right side - text -->
           <div class="w-1/2 pl-8 text-left">
             <h3 class="font-hero text-lg md:text-xl text-secondary-light font-light">Cena</h3>
             <p class="font-hero text-base md:text-lg text-secondary-light/80 font-light">6:00 pm</p>
           </div>
         </div>

                 <!-- Apertura de pista -->
         <div class="relative flex items-center">
           <!-- Left side - text -->
           <div class="w-1/2 pr-8 text-right">
             <h3 class="font-hero text-lg md:text-xl text-secondary-light font-light">Apertura de pista</h3>
             <p class="font-hero text-base md:text-lg text-secondary-light/80 font-light">07:00 pm</p>
           </div>
           
           <!-- Center - flower icon -->
           <div class="absolute left-1/2 transform -translate-x-1/2 w-8 h-8 flex items-center justify-center">
             <ItineraryFlower />
           </div>
           
           <!-- Right side - icon -->
           <div class="w-1/2 pl-8 flex justify-start">
             <ItineraryIcon icon="light-party" alt="Dance floor opening" />
           </div>
         </div>

                 <!-- Pastel -->
         <div class="relative flex items-center">
           <!-- Left side - icon -->
           <div class="w-1/2 pr-8 flex justify-end">
             <ItineraryIcon icon="cake" alt="Cake cutting" />
           </div>
           
           <!-- Center - flower icon -->
           <div class="absolute left-1/2 transform -translate-x-1/2 w-8 h-8 flex items-center justify-center">
             <ItineraryFlower />
           </div>
           
           <!-- Right side - text -->
           <div class="w-1/2 pl-8 text-left">
             <h3 class="font-hero text-lg md:text-xl text-secondary-light font-light">Pastel</h3>
             <p class="font-hero text-base md:text-lg text-secondary-light/80 font-light">09:00 pm</p>
           </div>
         </div>

                 <!-- Snack de despedida -->
         <div class="relative flex items-center">
           <!-- Left side - text -->
           <div class="w-1/2 pr-8 text-right">
             <h3 class="font-hero text-lg md:text-xl text-secondary-light font-light">Snack de despedida</h3>
             <p class="font-hero text-base md:text-lg text-secondary-light/80 font-light">10:30 pm</p>
           </div>
           
           <!-- Center - flower icon -->
           <div class="absolute left-1/2 transform -translate-x-1/2 w-8 h-8 flex items-center justify-center">
             <ItineraryFlower />
           </div>
           
           <!-- Right side - icon -->
           <div class="w-1/2 pl-8 flex justify-start">
             <ItineraryIcon icon="fireworks" alt="Farewell snack" />
           </div>
         </div>

      </div>
    </section>

  </div>
</InvitationSection> 