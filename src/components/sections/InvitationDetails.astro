---
import InvitationSection from '../InvitationSection.astro';

export interface Props {
  invitation?: any;
}

const { invitation } = Astro.props;

// Use invitation data if available, otherwise fallback to default
const guestName = invitation?.name || 'Gabriela';
const guestLastname = invitation?.lastname || 'Dur√°n';
const numberOfPasses = invitation?.number_of_passes || 5;
---

<InvitationSection id="section-invitation-details">
  <div class="relative z-10 flex flex-col items-center justify-center h-full min-h-screen px-4 space-y-8">
    <!-- "Te esperamos" message -->
    <section>
      <p class="font-hero text-base md:text-lg lg:text-xl text-white/90 font-light tracking-wider">
        Te esperamos
      </p>
    </section>
    <!-- Flower frame container -->
    <div class="relative w-60 h-60 md:w-96 md:h-96 lg:w-[480px] lg:h-[480px] flex flex-col items-center justify-center"
         style="background-image: url('/images/flower-frame.webp'); background-size: contain; background-position: center; background-repeat: no-repeat;">
      
      <!-- Content inside the frame -->
      <div class="text-center space-y-6 px-8">
        
        <!-- Main name -->
        <header>
          <h1 class="font-hero text-2xl md:text-4xl lg:text-5xl tracking-wide text-white font-light">
            {guestName} {guestLastname}
          </h1>
        </header>
      </div>
    </div>

    <footer class="pt-4">
      <p class="font-hero text-base md:text-xl lg:text-2xl text-white font-light tracking-wide">
        <span class="font-cormorant textlg">{numberOfPasses}</span> pases
      </p>
    </footer>

  </div>
</InvitationSection> 