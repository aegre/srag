---
import InvitationSection from '../InvitationSection.astro';
---

<InvitationSection id="section-thank-you">

  <div class="relative z-10 space-y-8">
    <header class="space-y-3">
      <h2 class="font-hero text-2xl tracking-[0.2em] text-secondary-light uppercase font-medium">
        Gracias
      </h2>
      <hr class="w-20 h-px bg-gradient-to-r from-transparent via-secondary-light to-transparent mx-auto border-0" aria-hidden="true" />
    </header>

    <div class="space-y-8 text-center">
      <div>
        <p class="text-secondary-light font-serif text-lg leading-relaxed mb-6">
          Tu presencia es el mejor regalo
        </p>
        <p class="text-secondary-light/80 font-serif text-sm leading-relaxed">
          Con mucho amor,<br/>
          <span class="font-angella text-lg text-secondary-light">Julietta</span>
        </p>
      </div>
    </div>
  </div>
</InvitationSection> 