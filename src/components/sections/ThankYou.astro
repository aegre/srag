<section class="min-h-[600px] p-8 flex flex-col justify-center snap-start relative" id="section-thank-you">
  <!-- Top left floral decoration -->
  <figure class="absolute -top-8 -left-8 w-32 h-32 opacity-80" aria-hidden="true">
    <svg viewBox="0 0 100 100" class="w-full h-full filter drop-shadow-lg" role="img" aria-label="Decorative flowers">
      <defs>
        <radialGradient id="flower-thanks" cx="50%" cy="50%" r="50%">
          <stop offset="0%" style="stop-color:#fbbf24;stop-opacity:0.9" />
          <stop offset="100%" style="stop-color:#f59e0b;stop-opacity:0.3" />
        </radialGradient>
      </defs>
      
      <circle cx="20" cy="25" r="8" fill="url(#flower-thanks)"/>
      <circle cx="30" cy="20" r="6" fill="#fbbf24" opacity="0.8"/>
      <circle cx="25" cy="35" r="5" fill="#f59e0b" opacity="0.7"/>
      
      <path d="M 40 30 Q 50 25 45 35 Q 40 40 35 35 Q 30 30 40 30" fill="#86efac" opacity="0.6"/>
      
      <circle cx="15" cy="30" r="1" fill="#fbbf24" opacity="0.9"/>
      <circle cx="35" cy="15" r="1.5" fill="#f59e0b" opacity="0.8"/>
    </svg>
  </figure>

  <div class="relative z-10 space-y-8">
    <header class="space-y-3">
      <h2 class="font-hero text-2xl tracking-[0.2em] text-secondary-light uppercase font-medium">
        Gracias
      </h2>
      <hr class="w-20 h-px bg-gradient-to-r from-transparent via-secondary-light to-transparent mx-auto border-0" aria-hidden="true" />
    </header>

    <div class="space-y-8 text-center">
      <div>
        <p class="text-secondary-light font-serif text-lg leading-relaxed mb-6">
          Tu presencia es el mejor regalo
        </p>
        <p class="text-secondary-light/80 font-serif text-sm leading-relaxed">
          Con mucho amor,<br/>
          <span class="font-angella text-lg text-secondary-light">Julietta</span>
        </p>
      </div>

      <div class="pt-6">
        <div class="w-12 h-12 mx-auto bg-gradient-to-br from-yellow-300/20 to-yellow-500/20 rounded-full flex items-center justify-center">
          <svg class="w-6 h-6 text-yellow-300" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"/>
          </svg>
        </div>
      </div>
    </div>
  </div>
</section> 