---

<section class="min-h-[600px] p-8 flex flex-col justify-center snap-start relative" id="section-main-invitation">
  <!-- Top floral decoration -->
  <figure class="absolute -top-12 -left-12 w-40 h-40 opacity-90" aria-hidden="true">
    <svg viewBox="0 0 120 120" class="w-full h-full filter drop-shadow-lg" role="img" aria-label="Decorative flowers">
      <defs>
        <radialGradient id="flower1" cx="50%" cy="50%" r="50%">
          <stop offset="0%" style="stop-color:#e9d5ff;stop-opacity:0.8" />
          <stop offset="100%" style="stop-color:#c7d2fe;stop-opacity:0.4" />
        </radialGradient>
        <radialGradient id="flower2" cx="50%" cy="50%" r="50%">
          <stop offset="0%" style="stop-color:#fecaca;stop-opacity:0.7" />
          <stop offset="100%" style="stop-color:#fed7d7;stop-opacity:0.3" />
        </radialGradient>
      </defs>
      
      <circle cx="25" cy="30" r="10" fill="url(#flower1)"/>
      <circle cx="35" cy="25" r="8" fill="#c7d2fe" opacity="0.8"/>
      <circle cx="30" cy="40" r="7" fill="url(#flower2)"/>
      <circle cx="20" cy="20" r="5" fill="#fed7d7" opacity="0.7"/>
      <circle cx="40" cy="35" r="6" fill="#e9d5ff" opacity="0.6"/>
      
      <path d="M 45 35 Q 55 30 50 40 Q 45 45 40 40 Q 35 35 45 35" fill="#86efac" opacity="0.5"/>
      <path d="M 15 45 Q 25 40 20 50 Q 15 55 10 50 Q 5 45 15 45" fill="#a7f3d0" opacity="0.4"/>
      <path d="M 50 30 Q 60 25 55 35 Q 50 40 45 35 Q 40 30 50 30" fill="#86efac" opacity="0.3"/>
      
      <circle cx="15" cy="35" r="1.5" fill="#fbbf24" opacity="0.8"/>
      <circle cx="45" cy="20" r="1" fill="#fbbf24" opacity="0.6"/>
      <circle cx="35" cy="50" r="1.5" fill="#fbbf24" opacity="0.7"/>
    </svg>
  </figure>

  <!-- Gold sparkles -->
  <div class="absolute top-1/4 right-1/4 w-3 h-3 bg-yellow-300 rounded-full opacity-70 animate-pulse shadow-lg shadow-yellow-300/50" aria-hidden="true"></div>
  <div class="absolute top-1/3 right-1/6 w-1.5 h-1.5 bg-yellow-200 rounded-full opacity-90 animate-pulse" style="animation-delay: 0.5s" aria-hidden="true"></div>
  <div class="absolute bottom-1/4 left-1/4 w-2 h-2 bg-yellow-300 rounded-full opacity-60 animate-pulse shadow-md shadow-yellow-300/40" style="animation-delay: 1s" aria-hidden="true"></div>

  <div class="relative z-10 space-y-8" id="event-details">
    <!-- Event type header -->
    <header class="space-y-3">
      <p class="font-hero text-sm tracking-[0.25em] text-secondary-light uppercase font-medium" role="subtitle">
        Mis XV Años
      </p>
      <hr class="w-16 h-px bg-gradient-to-r from-transparent via-secondary-light to-transparent mx-auto border-0" aria-hidden="true" />
    </header>

    <!-- Celebrant name -->
    <section class="space-y-6">
      <h1 id="event-title" class="font-angella text-6xl text-secondary-light leading-tight drop-shadow-2xl">
        Julietta
      </h1>
      <hr class="w-24 h-px bg-gradient-to-r from-transparent via-secondary-light to-transparent mx-auto border-0" aria-hidden="true" />
    </section>

    <!-- Event details -->
    <section class="space-y-6 pt-4" aria-label="Event date and time">
      <div class="flex items-center text-secondary font-hero justify-center space-x-12">
        <!-- Day of week -->
        <div class="text-center space-y-0 md:space-y-2">
          <p class="font-hero border-y-1 py-2 px-3 text-xs tracking-[0.2em] text-secondary-light uppercase font-light">
            <span class="sr-only">Day of the week: </span>
            Sábado
          </p>
        </div>

        <!-- Date -->
        <div class="text-center lg:space-y-2">
          <time datetime="2024-09-13" class="font-serif text-5xl font-light text-secondary-light drop-shadow-xl">
            13
          </time>
          <p class="font-hero text-xs tracking-[0.2em] text-secondary-light uppercase font-light">
            <span class="sr-only">Month: </span>
            Septiembre
          </p>
        </div>

        <!-- Time -->
        <div class="text-center space-y-2">
          <time datetime="19:00" class="font-hero text-xs tracking-[0.2em] text-secondary-light border-y-1 py-2 px-3 uppercase font-light">
            <span class="sr-only">Time: </span>
            7:00 P.M.
          </time>
        </div>
      </div>
    </section>
  </div>

  <!-- Scroll indicator -->
  <div class="absolute bottom-4 left-1/2 transform -translate-x-1/2 text-secondary-light/60" aria-hidden="true">
    <div class="animate-bounce">
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"/>
      </svg>
    </div>
  </div>
</section> 