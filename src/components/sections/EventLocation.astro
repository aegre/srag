---
import InvitationSection from '../InvitationSection.astro';
---

<InvitationSection id="section-event-location">
  <div class="relative z-10 space-y-8">
    <header class="space-y-3">
      <h2 class="font-hero text-2xl tracking-[0.2em] text-secondary-light uppercase font-medium">
        Celebración
      </h2>
      <hr class="w-20 h-px bg-gradient-to-r from-transparent via-secondary-light to-transparent mx-auto border-0" aria-hidden="true" />
    </header>

    <div class="space-y-6">
      <div class="text-center">
        <h3 class="font-cormorant text-xl text-secondary-light mb-4">Iglesia</h3>
        <p class="text-secondary-light font-serif text-sm leading-relaxed">
          Parroquia San José<br/>
          Av. Principal #123<br/>
          5:00 P.M.
        </p>
      </div>

      <hr class="w-16 h-px bg-gradient-to-r from-transparent via-secondary-light/40 to-transparent mx-auto border-0" aria-hidden="true" />

      <div class="text-center">
        <h3 class="font-cormorant text-xl text-secondary-light mb-4">Recepción</h3>
        <p class="text-secondary-light font-serif text-sm leading-relaxed">
          Salón de Eventos Luna<br/>
          Calle de la Fiesta #456<br/>
          7:00 P.M.
        </p>
      </div>
    </div>
  </div>
</InvitationSection> 