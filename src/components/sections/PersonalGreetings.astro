---
import InvitationSection from '../InvitationSection.astro';
import { getSpanishConjunction } from '../../utils/textUtils';

// Godparents names
const godmotherName = "Ma. Lourdes";
const godmotherLastname = "Velázquez";
const godfatherName = "Humberto";
const godfatherLastname = "Rodríguez";

// Get proper conjunction
const conjunction = getSpanishConjunction(godmotherName, godfatherName);
---

<InvitationSection id="section-personal-greetings">
  <div class="relative z-10 space-y-12 text-center">
    
    <!-- Thank you message -->
    <header class="space-y-6">
      <p class="font-hero text-xs md:text-xl tracking-[0.15em] text-secondary-light font-light leading-relaxed max-w-3xl mx-auto">
         Y por ser parte de este hermoso momento a mis padrinos
      </p>
    </header>

    <!-- Main name -->
    <section class="space-y-8">
      <div class="space-y-4">
        <p class="font-angella text-4xl md:text-7xl lg:text-8xl text-secondary-light leading-tight">
          {godmotherName} {godmotherLastname}
        </p>
       <!-- Elegant separator -->
      <div class="flex justify-center items-center space-x-4">
        <hr class="w-12 h-px bg-gradient-to-r from-transparent via-secondary-light/40 to-transparent border-0" aria-hidden="true" />
        <span class="font-angella text-3xl md:text-4xl text-secondary-light/60">{conjunction}</span>
        <hr class="w-12 h-px bg-gradient-to-r from-transparent via-secondary-light/40 to-transparent border-0" aria-hidden="true" />
      </div>
        <p class="font-angella text-4xl md:text-7xl lg:text-8xl text-secondary-light leading-tight">
        {godfatherName} {godfatherLastname}
        </p>
      </div>
    </section>

    <!-- Personal invitation message -->
    <footer class="space-y-6 pt-8">
      <p class="font-hero text-xs md:text-lg tracking-[0.1em] text-secondary-light font-light leading-relaxed max-w-2xl mx-auto">
        Tengo el honor de invitarte a celebrar mi gran día en compañía de mi familia y amigos.
      </p>
    </footer>

  </div>
</InvitationSection> 