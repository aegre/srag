---
import InvitationSection from '../InvitationSection.astro';
---

<InvitationSection id="section-parents-greetings">
  <div class="relative z-10 space-y-12 text-center">
    
    <!-- Header message -->
    <header class="space-y-6">
      <p class="font-hero text-lg md:text-xl tracking-[0.15em] text-secondary-light font-light leading-relaxed">
        Gracias a mis padres que con tanto cariño han hecho de mi ilusión una realidad
      </p>
    </header>

    <!-- Parents names section -->
    <section class="space-y-8">
      
      <!-- Mother's name -->
      <div class="space-y-2">
        <h3 class="font-angella text-4xl md:text-6xl lg:text-7xl text-secondary-light leading-tight">
          Gabriela Marín
        </h3>
      </div>

      <!-- Elegant separator -->
      <div class="flex justify-center items-center space-x-4">
        <hr class="w-12 h-px bg-gradient-to-r from-transparent via-secondary-light/40 to-transparent border-0" aria-hidden="true" />
        <span class="font-angella text-3xl md:text-4xl text-secondary-light/60">y</span>
        <hr class="w-12 h-px bg-gradient-to-r from-transparent via-secondary-light/40 to-transparent border-0" aria-hidden="true" />
      </div>

      <!-- Father's name -->
      <div class="space-y-2">
        <h3 class="font-angella text-4xl md:text-6xl lg:text-7xl text-secondary-light leading-tight">
          Leopoldo Durán
        </h3>
      </div>

    </section>

  </div>
</InvitationSection> 