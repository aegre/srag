---
import AdminLayout from '../../../layouts/AdminLayout.astro';
import AdminOnlyRoute from '../../../components/admin/AdminOnlyRoute';
import CreateUserForm from '../../../components/admin/CreateUserForm';
---

<AdminLayout title="Crear Usuario - Julietta XV Años">
  <AdminOnlyRoute client:load>
    <div class="max-w-4xl mx-auto">
      <div class="mb-6">
        <a href="/admin/users" class="inline-flex items-center text-sm text-purple-600 hover:text-purple-900 mb-4">
          <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
          </svg>
          Volver a Usuarios
        </a>
        <h1 class="text-2xl font-bold text-gray-900">Crear Nuevo Usuario</h1>
        <p class="text-gray-600 mt-2">Crea una nueva cuenta de usuario para el panel de administración.</p>
      </div>
      
      <CreateUserForm client:load />
    </div>
  </AdminOnlyRoute>
</AdminLayout> 