---
import AdminLayout from '../../../../layouts/AdminLayout.astro';
import AdminOnlyRoute from '../../../../components/admin/AdminOnlyRoute';
import EditUserForm from '../../../../components/admin/EditUserForm';

const { id } = Astro.params;
---

<AdminLayout title="Editar Usuario - Julietta XV Años">
  <AdminOnlyRoute client:load="react">
    <div class="max-w-4xl mx-auto">
      <div class="mb-6">
        <a href="/admin/users" class="inline-flex items-center text-sm text-purple-600 hover:text-purple-900 mb-4">
          <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
          </svg>
          Volver a Usuarios
        </a>
        <h1 class="text-2xl font-bold text-gray-900">Editar Usuario</h1>
        <p class="text-gray-600 mt-2">Modifica la información del usuario del panel de administración.</p>
      </div>
      
      <EditUserForm userId={id} client:load="react" />
    </div>
  </AdminOnlyRoute>
</AdminLayout> 